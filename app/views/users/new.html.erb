<h2> Create a user account </h2>

<%= render partial: '/errors', locals: { record: @user } %>

<%= form_for @user, url:  signup_path do |f| %>
    <%= f.label :Username %>
    <div><%= f.text_field :username %></div>
    <%= f.label :Password %>
    <div><%= f.password_field :password %></div>
    <%= f.label :confirm_password %>
    <div><%= f.password_field :password_confirmation %>
    <%= f.submit %>
<% end %>